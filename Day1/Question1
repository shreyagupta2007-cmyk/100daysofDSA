#include <stdio.h>
int main()
{
    int n,x,pos;
    printf("Enter the size of the array:");
    scanf("%d", &n);
    int a[n+1];
    printf("Enter array elements:");
    for(int i=0;i<n;i++)
    {
        scanf("%d", &a[i]);
    }
    for(int i=0;i<n;i++)
    {
        printf("%d ", a[i]);
    }
    printf("\nEnter the position where the element is to be inserted:");
    scanf("%d", &pos);
    printf("Enter the element to be inserted:");
    scanf("%d", &x);
    for(int i=n-1;i>=pos-1;i--)
    {
        a[i+1]=a[i];
    }
    a[pos-1]=x;
    printf("New array:");
    for(int i=0;i<n+1;i++)
    {
        printf("%d ", a[i]);
    }
    return 0;
}
