#include<stdio.h>
int main()
{
    int n,x;
    printf("Enter the size of array:");
    scanf("%d", &n);
    int a[n];
    printf("Enter array elements:");
    for(int i=0;i<n;i++)
    {
        scanf("%d", &a[i]);
    }
    printf("Enter the index to be deleted:");
    scanf("%d", &x);
    for(int i=x-1;i<=n-2;i++)
    {
        a[i]=a[i+1];
    }
    a[n-1]='\0';
    printf("New array:");
    for(int i=0;i<n-1;i++)
    {
        printf("%d ", a[i]);
    }
    return 0;
}
